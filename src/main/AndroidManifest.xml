<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nicholassaunderson.scrollexperimentapplication">

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".views.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.GridActivity" />
        <activity android:name=".views.GridSizeActivity" />
        <activity android:name=".views.InstructionsActivity" />
        <activity android:name=".views.TargetIconActivity" />
        <activity android:name=".views.TileActivity" />
        <activity android:name=".views.TileSpaceActivity" />
        <activity android:name=".views.SettingsActivity" />
        <activity android:name=".views.ProfileActivity" />
    </application>

</manifest>