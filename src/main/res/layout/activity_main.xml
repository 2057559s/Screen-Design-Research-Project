<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    style="@style/AppTheme"
    tools:context="com.example.nicholassaunderson.scrollexperimentapplication.views.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white"
        android:background="?attr/colorPrimary">

        <TextView
            android:layout_width="600dp"
            android:layout_height="40dp"
            android:textSize="24sp"
            android:text="Screen Design Experimental Application"
            android:gravity="left"
            android:layout_marginTop="20dp"
            android:textColor="@color/cardview_light_background"/>
    </android.support.v7.widget.Toolbar>


    <ImageButton
        android:id="@+id/button1"
        android:layout_width="156.8dp"
        android:layout_height="215.6dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="30dp"
        android:onClick="openGrid"
        android:background="@android:drawable/dialog_holo_light_frame"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Standard Grid Layout"
            android:layout_marginTop="210dp"
            android:layout_marginLeft="40dp"

        />


    <ImageButton
        android:id="@+id/button2"
        android:layout_width="156.8dp"
        android:layout_height="215.6dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="340dp"
        android:onClick="openGridSize"
        android:background="@android:drawable/dialog_holo_light_frame"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Grid Size Layout"
            android:layout_marginTop="210dp"
            android:layout_marginLeft="350dp"

        />

    <ImageButton
        android:id="@+id/button3"
        android:layout_width="156.8dp"
        android:layout_height="215.6dp"
        android:layout_marginTop="520dp"
        android:layout_marginLeft="30dp"
        android:onClick="openTile"
        android:background="@android:drawable/dialog_holo_light_frame"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Tile Layout"
            android:layout_marginTop="530dp"
            android:layout_marginLeft="40dp"

            />

    <ImageButton
        android:id="@+id/button4"
        android:layout_width="156.8dp"
        android:layout_height="215.6dp"
        android:layout_marginTop="520dp"
        android:layout_marginLeft="340dp"
        android:onClick="openTileNoSpace"
        android:background="@android:drawable/dialog_holo_light_frame"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Tile Layout(No Space)"
            android:layout_marginTop="530dp"
            android:layout_marginLeft="350dp"

            />


    <Button
        android:id="@+id/settingsButton"
        android:text="Settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="78dp"
        android:layout_marginLeft="400dp"
        android:onClick="openSettings"/>

    <Button
        android:id="@+id/profileButton"
        android:text="Profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="400dp"
        android:onClick="openProfile"/>


</RelativeLayout>
